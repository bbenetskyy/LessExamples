    <StackLayout>
        <Frame HorizontalOptions="Center"
               HasShadow="True">
            <StackLayout>
                <ffimageloading:CachedImage
                    Source="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRr2ZUO3i5IHnFTBwyP2cImFri4Hc9zb6f-WqmRI12cpCmAZ80K">
                    <ffimageloading:CachedImage.Transformations>
                        <fftransformations:CircleTransformation/>
                    </ffimageloading:CachedImage.Transformations>
                </ffimageloading:CachedImage>
                <Label StyleId="headerLabel" 
                       HorizontalTextAlignment="Center"
                       Text="Amazing Title" />
                <BoxView StyleClass="splitterBox"
                         HorizontalOptions="FillAndExpand"/>
                <Label StyleId="detailsLabel" 
                       HorizontalTextAlignment="Center"
                    Text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo."/>
            </StackLayout>
        </Frame>

        <ListView SelectionMode="None" HasUnevenRows="True" SeparatorColor="Transparent"
            ItemsSource="{Binding Source={x:Static fakeProvider:FakeDataProvider.FakeBadges}}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <local:BadgeButton Title="{Binding Title}"
                                       Value="{Binding Value}"
                                       ValueColor="{Binding ValueColor}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
